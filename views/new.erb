
<h2>New transaction</h2>
<form method="POST" action="/transactions">

    <div class="form-amount">
      <input type="number" name="amount" placeholder="Amount" id="amount"/>
    </div>

    <div class="form-date">
      
      <input type="date" name="transaction_date" id="transaction_date"/>
    </div>

    <div class="form-categories-container">
        <%@categories.each do |category|%>
            <label class="labl" for="<%=category.name%>">
              <input type="radio" id="<%=category.name%>" name="category_id" value="<%=category.id%>">
              <div class= "category-container-picker">
                <div class= "category-image-container-picker">
                  <img class="transaction-list-icon" src="/<%=category.icon()%>"/>
                </div>
                <span><%=category.name%></span>
              <div>
              
            </label><br>
        <%end %>
    </div>

    <div class="form-merchant">
        <input type="text" list="listofmerchants" name="merchant_id" placeholder="Merchant" class="autocomplete">
        <datalist id="listofmerchants">
            <%@merchants.each do |merchant|%>
                <option value="<%=merchant.name()%>">
            <%end %>
        </datalist>
    </div>






    <div class="form-new">
      <input type="submit" value="New transaction"/>
    </div>

</form>



