
<span class="new-transaction-header">New transaction</span>
<form class="new-transaction-form" method="POST" action="/transactions">

    <div class="form-amount">
      <input type="number" name="amount" style = "text-align: center" placeholder="Amount" id="amount" required/>
    </div>

    <div class="form-date">
      
      <input type="date" name="transaction_date" placeholder="Date" style = "text-align: center" id="transaction_date" required/>
    </div>

    <div class="form-categories-container">
        <%@categories.each do |category|%>
            <label class="labl" for="<%=category.name%>">
              <input type="radio" id="<%=category.name%>" name="category_id" value="<%=category.id%>" required/>
              <div class= "category-container-picker">
                <div style = "background: <%=category.css_colour_1()%>" class= "category-image-container-picker">
                  <img class="transaction-list-icon" src="/<%=category.icon()%>"/>
                </div>
                <span><%=category.name%></span>
              </div>
            </label>
        <%end %>
    </div>

    <div class="form-merchant">
        <input type="text" list="listofmerchants" name="merchant_id" style = "text-align: center" placeholder="Merchant" class="autocomplete" required>
        <datalist id="listofmerchants">
            <%@merchants.each do |merchant|%>
                <option value="<%=merchant.name()%>">
            <%end %>
        </datalist>
    </div>



    <div class="form-new">
      <input type="submit" value="New transaction!"/>
    </div>

</form>



